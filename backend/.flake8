[flake8]
# Maximum line length
max-line-length = 88

# Maximum complexity
max-complexity = 10

# Ignore certain errors
ignore = 
    # Black compatibility
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    # Common Python patterns
    E501,  # line too long (handled by black)
    # Import formatting (handled by isort)
    E402,  # module level import not at top of file
    # Documentation (we'll handle separately)
    D100,  # Missing docstring in public module
    D101,  # Missing docstring in public class
    D102,  # Missing docstring in public method
    D103,  # Missing docstring in public function
    D104,  # Missing docstring in public package
    D105,  # Missing docstring in magic method
    D107,  # Missing docstring in __init__

# Exclude paths
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    migrations,
    .mypy_cache,
    .pytest_cache,
    alembic/versions,
    tests/fixtures

# Per file ignores
per-file-ignores =
    # Init files don't need docstrings
    __init__.py: D104
    # Tests can have longer lines and missing docstrings
    test_*.py: E501,D100,D101,D102,D103
    # Settings files can have imports not at top
    settings*.py: E402
    # Scripts can be more relaxed
    scripts/*.py: D100,D103

# McCabe complexity
[mccabe]
max-complexity = 10

# Import order settings (for flake8-import-order)
import-order-style = google
application-import-names = app

# Docstring settings (for flake8-docstrings)
docstring-convention = google
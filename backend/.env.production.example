# Fynlo POS Backend - Production Environment Template
# Copy this file to .env for production deployment
# Fill in all values marked with YOUR_* placeholders

# =============================================================================
# PRODUCTION APPLICATION SETTINGS
# =============================================================================
APP_NAME="Fynlo POS"
DEBUG=false
ENVIRONMENT="production"
LOG_LEVEL="info"
API_V1_STR="/api/v1"

# =============================================================================
# PRODUCTION DATABASE CONFIGURATION
# =============================================================================
# Use managed database service (DigitalOcean, AWS RDS, etc.)
DATABASE_URL="postgresql://YOUR_DB_USER:YOUR_SECURE_PASSWORD@your-db-host:5432/fynlo_pos"

# =============================================================================
# PRODUCTION REDIS CONFIGURATION
# =============================================================================
# Use managed Redis service with authentication
REDIS_URL="redis://YOUR_REDIS_USER:YOUR_REDIS_PASSWORD@your-redis-host:6379/0"

# =============================================================================
# PRODUCTION SECURITY CONFIGURATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY="YOUR_64_CHAR_SECRET_KEY_GENERATED_SECURELY"
JWT_SECRET_KEY="YOUR_64_CHAR_JWT_SECRET_KEY_GENERATED_SECURELY"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# PRODUCTION PAYMENT PROCESSING
# =============================================================================
# Stripe LIVE Keys (NOT test keys!)
STRIPE_SECRET_KEY="sk_live_YOUR_LIVE_STRIPE_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_LIVE_STRIPE_PUBLISHABLE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_LIVE_WEBHOOK_SECRET"

# Square PRODUCTION Keys (NOT sandbox!)
SQUARE_APPLICATION_ID="YOUR_PRODUCTION_SQUARE_APP_ID"
SQUARE_ACCESS_TOKEN="YOUR_PRODUCTION_SQUARE_ACCESS_TOKEN"
SQUARE_LOCATION_ID="YOUR_PRODUCTION_SQUARE_LOCATION_ID"
SQUARE_WEBHOOK_SIGNATURE_KEY="YOUR_PRODUCTION_SQUARE_WEBHOOK_KEY"
SQUARE_ENVIRONMENT="production"

# Payment Fee Configuration
QR_PAYMENT_FEE_PERCENTAGE=1.2
DEFAULT_CARD_FEE_PERCENTAGE=2.9

# =============================================================================
# PRODUCTION CORS & SECURITY
# =============================================================================
# Only allow your production domains
CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# Security Headers
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"

# =============================================================================
# PRODUCTION FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="/app/uploads"

# =============================================================================
# PRODUCTION MONITORING
# =============================================================================
# Sentry for error tracking
SENTRY_DSN="https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID"

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
SMTP_HOST="smtp.yourmailprovider.com"
SMTP_PORT=587
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
EMAILS_FROM_EMAIL="noreply@yourdomain.com"
EMAILS_FROM_NAME="Fynlo POS"

# =============================================================================
# PRODUCTION DEPLOYMENT VERIFICATION
# =============================================================================
# Set these to verify production setup
PRODUCTION_VERIFIED=false  # Set to true after verifying all settings
SSL_ENABLED=false         # Set to true after SSL certificate is configured
BACKUPS_CONFIGURED=false  # Set to true after database backups are set up

# =============================================================================
# CRITICAL: PRODUCTION SECURITY CHECKLIST
# =============================================================================
# Before going live, verify:
# ❌ All YOUR_* placeholders replaced with actual values
# ❌ All test/sandbox keys replaced with production keys  
# ❌ SSL certificates configured and HTTPS enforced
# ❌ Database backups scheduled
# ❌ Monitoring and alerting configured
# ❌ Security headers properly configured
# ❌ CORS origins restricted to production domains only
# ❌ All secrets generated with secure random values
# ❌ This file is NOT committed to version control
# =============================================================================
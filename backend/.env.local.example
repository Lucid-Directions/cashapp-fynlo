# =============================================================================
# FYNLO POS - LOCAL DEVELOPMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local (git-ignored) and fill in your actual values
# Never commit real credentials to version control!

# Database - Use your local or development database
DATABASE_URL="postgresql://username:password@localhost:5432/fynlo_pos_dev"

# Redis - Use your local Redis instance
REDIS_URL="redis://localhost:6379/0"

# Security - Generate a strong secret key for local development
SECRET_KEY="your-local-development-secret-key-make-it-long-and-random"

# Supabase - Your development project credentials
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Payment Providers - Use sandbox/test credentials
SUMUP_API_KEY="your-sumup-sandbox-api-key"
SUMUP_MERCHANT_CODE="your-merchant-code"
SUMUP_AFFILIATE_KEY="your-affiliate-key"

STRIPE_SECRET_KEY="sk_test_your_stripe_test_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_test_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

SQUARE_ACCESS_TOKEN="your-square-sandbox-access-token"
SQUARE_LOCATION_ID="your-square-location-id"
SQUARE_APPLICATION_ID="your-square-application-id"
SQUARE_WEBHOOK_SIGNATURE_KEY="your-square-webhook-key"

# DigitalOcean Spaces (if needed for local testing)
SPACES_ACCESS_KEY_ID="your-spaces-access-key"
SPACES_SECRET_ACCESS_KEY="your-spaces-secret-key"

# Platform Owner Emails - Add your email for local admin access
PLATFORM_OWNER_EMAILS="your-email@example.com"
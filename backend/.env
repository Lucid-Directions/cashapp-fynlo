# =============================================================================
# FYNLO POS BACKEND - LOCAL DEVELOPMENT CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME="Fynlo POS"
DEBUG=true
ENVIRONMENT="development"
API_V1_STR="/api/v1"
ROOT_PATH=""
LOG_LEVEL="DEBUG"

# Database Configuration - Set via environment variables
# DATABASE_URL should be set in your deployment environment
# For local development, create a .env.local file (git-ignored)
DATABASE_URL="postgresql://localhost:5432/fynlo_pos_dev"
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="fynlo_pos_dev"
DB_USER="postgres"
DB_PASSWORD="password"

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration - Set via environment variables
# REDIS_URL should be set in your deployment environment
# For local development, use local Redis instance
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_USER=""
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Authentication & Security
# SECRET_KEY must be set via environment variable in production
SECRET_KEY="development-secret-key-do-not-use-in-production-change-me"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
CORS_CREDENTIALS=true

# Payment Provider Integrations - Set via environment variables
# These are placeholder values for development
SUMUP_API_KEY="your-sumup-api-key-here"
SUMUP_MERCHANT_CODE="your-merchant-code"
SUMUP_AFFILIATE_KEY="your-affiliate-key"
SUMUP_APPLICATION_ID="fynlo"
SUMUP_ENVIRONMENT="sandbox"

# Stripe Payment Gateway - Set via environment variables
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
STRIPE_API_VERSION="2023-10-16"

# Square Payment Gateway - Set via environment variables
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_LOCATION_ID="your-square-location-id"
SQUARE_APPLICATION_ID="your-square-application-id"
SQUARE_ENVIRONMENT="sandbox"
SQUARE_WEBHOOK_SIGNATURE_KEY="your-square-webhook-key"

# Payment Fee Configuration
QR_PAYMENT_FEE_PERCENTAGE=1.2
DEFAULT_CARD_FEE_PERCENTAGE=2.9
PLATFORM_FEE_PERCENTAGE=0.5

# DigitalOcean Spaces Configuration - Set via environment variables
SPACES_ACCESS_KEY_ID="your-spaces-access-key"
SPACES_SECRET_ACCESS_KEY="your-spaces-secret-key"
SPACES_BUCKET="fynlo-pos-storage"
SPACES_REGION="lon1"
SPACES_ENDPOINT="https://lon1.digitaloceanspaces.com"
CDN_URL="https://fynlo-pos-storage.lon1.cdn.digitaloceanspaces.com"

# File Storage Configuration
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760

# WebSocket Configuration
WEBSOCKET_HOST="localhost"
WEBSOCKET_PORT=8001
WEBSOCKET_PATH="/ws"

# Domain Configuration
DOMAIN="localhost:8081"
API_DOMAIN="localhost:8000"
FRONTEND_URL="http://localhost:8081"

# Monitoring (Disabled for Development)
ENABLE_METRICS=false
SENTRY_DSN=""

# UK Business Settings
UK_VAT_RATE=20.0

# =============================================================================
# SUPABASE AUTHENTICATION CONFIGURATION
# =============================================================================
# Get these values from your Supabase dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings -> API
# 4. Copy the values below

# Supabase Configuration - Set via environment variables
# Get these from your Supabase dashboard -> Settings -> API
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Platform Owner Emails - Set via environment variables
# SECURITY: These emails have full platform access - keep secure!
PLATFORM_OWNER_EMAILS="admin@fynlo.co.uk"
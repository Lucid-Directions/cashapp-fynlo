# Fynlo POS Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Fynlo POS"
DEBUG=true
API_V1_STR="/api/v1"

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://fynlo_user:fynlo_password@localhost:5432/fynlo_pos"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"

# Security Settings
SECRET_KEY="your-super-secret-key-change-in-production-generate-with-openssl-rand-base64-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment Processing
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# QR Payment Settings (Competitive Advantage)
QR_PAYMENT_FEE_PERCENTAGE=1.2
DEFAULT_CARD_FEE_PERCENTAGE=2.9

# WebSocket Configuration
WEBSOCKET_HOST="localhost"
WEBSOCKET_PORT=8001

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"

# Development Settings
# Set DEBUG=false in production
# Generate SECRET_KEY with: openssl rand -base64 32
# Never commit the actual .env file to version control
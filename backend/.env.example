# Fynlo POS Backend Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Application Settings
ENVIRONMENT=development
DEBUG=false

# REQUIRED: Security (MUST be changed in production)
SECRET_KEY=your-secret-key-here-minimum-32-chars-recommended

# REQUIRED: Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fynlo_pos

# REQUIRED: Redis Configuration
REDIS_URL=redis://localhost:6379/0

# REQUIRED: Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Optional: Seed Script Passwords (for development/testing)
# If not provided, random passwords will be generated
SEED_PLATFORM_PASSWORD=
SEED_OWNER_PASSWORD=
SEED_MANAGER_PASSWORD=

# Optional: Payment Provider Keys (required for payment processing)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
SUMUP_API_KEY=
SUMUP_MERCHANT_CODE=

# Optional: Email Configuration
SENDGRID_API_KEY=
FROM_EMAIL=noreply@fynlo.com

# Optional: Storage Configuration  
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Optional: CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Optional: Monitoring
SENTRY_DSN=